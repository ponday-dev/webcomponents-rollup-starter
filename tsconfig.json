{
    "compilerOptions": {
        "baseUrl": "src",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node",
            "@types"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "paths": {
            "~/*": ["*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
